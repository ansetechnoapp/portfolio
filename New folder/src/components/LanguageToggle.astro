---
// Composant de sélection de langue
---

<div class="language-toggle">
  <button class="language-btn" data-lang="fr" aria-label="Français">FR</button>
  <span class="divider">|</span>
  <button class="language-btn" data-lang="en" aria-label="English">EN</button>
</div>

<script>
  // Récupérer la langue actuelle depuis localStorage ou utiliser la langue par défaut
  const currentLang = localStorage.getItem('preferredLanguage') || 'fr';
  
  // Marquer le bouton de la langue active
  document.querySelector(`[data-lang="${currentLang}"]`)?.classList.add('active');
  
  // Ajouter des écouteurs d'événements aux boutons de langue
  document.querySelectorAll('.language-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const lang = btn.getAttribute('data-lang');
      if (lang) {
        localStorage.setItem('preferredLanguage', lang);
        document.documentElement.setAttribute('lang', lang);
        
        // Recharger la page pour appliquer la nouvelle langue
        window.location.reload();
      }
    });
  });
</script>

<style>
  .language-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .language-btn {
    background: none;
    border: none;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
  }
  
  .language-btn:hover, .language-btn.active {
    opacity: 1;
  }
  
  .divider {
    opacity: 0.5;
  }
</style>

---
import Layout from "../../layouts/Layout.astro";
import { RequestPasswordReset } from "../../components/reactJS/PasswordReset";
import { supabase } from "../../lib/supabase";

// Vérifier si l'utilisateur est déjà connecté
const { data: { session } } = await supabase.auth.getSession();
if (session) {
  return Astro.redirect('/docs/dashboard');
}
---

<Layout
  title="Réinitialisation de Mot de Passe - Plateforme de Documentation"
  description="Demander une réinitialisation de mot de passe pour la plateforme de documentation collaborative"
>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="p-6">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold">Réinitialisation de Mot de Passe</h1>
          <p class="text-gray-600 mt-2">
            Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe
          </p>
        </div>
        
        <RequestPasswordReset client:load />
      </div>
    </div>
  </main>
</Layout>

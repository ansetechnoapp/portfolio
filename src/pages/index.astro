<style>
  /* Base styles for the hero container */
  .hero-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    padding: 2rem 1rem;
    position: relative;
    overflow: hidden;
  }

  /* Hero content styles */
  .hero-content {
    z-index: 2;

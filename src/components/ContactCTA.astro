---
import CallToAction from "./CallToAction.astro";
import Icon from "./reactJS/Icon";
---

<aside class="contact-container">
  <div class="content-wrapper">
    <div class="text-section">
      <h2>Let's create something amazing together</h2>
      <p>Ready to discuss your next project? I'm just a message away.</p>
    </div>
    
    <div class="cta-section">
      <div class="primary-cta">
        <CallToAction href="mailto:contact@zoddev.site">
          Send Me a Message
          <Icon icon="paper-plane-tilt" size="1.2em" />
        </CallToAction>
      </div>
      
      <div class="social-links">
        <a href="https://www.linkedin.com/in/anscod/" aria-label="LinkedIn">
          <Icon icon="linkedin-logo" size="1.5em" />
        </a>
        <a href="https://github.com/ansetechnoapp" aria-label="GitHub">
          <Icon icon="github-logo" size="1.5em" />
        </a>
        <a href="https://x.com/ottianselme" aria-label="Twitter">
          <Icon icon="twitter-logo" size="1.5em" />
        </a>
      </div>
    </div>
  </div>
</aside>

<style>
  .contact-container {
    position: relative;
    margin: 6rem 0;
    padding: 4rem 1.5rem;
    background: linear-gradient(135deg, var(--gray-999_40) 0%, var(--gray-800) 100%);
    border-radius: 1rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .contact-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
    transform: translateX(-100%);
    animation: shimmer 3s infinite;
    z-index: 0;
  }

  @keyframes shimmer {
    100% {
      transform: translateX(100%);
    }
  }

  .content-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .text-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h2 {
    font-size: var(--text-2xl);
    line-height: 1.2;
    font-weight: 600;
    color: var(--gray-0, #ffffff);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  p {
    color: var(--gray-300, #d4d4d8);
    font-size: var(--text-md);
    max-width: 35ch;
    line-height: 1.6;
  }

  .cta-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2rem;
  }

  .primary-cta {
    transform: scale(1);
    transition: transform 0.2s ease;
  }

  .primary-cta:hover {
    transform: scale(1.05);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    display: grid;
    place-items: center;
    padding: 0.75rem;
    color: var(--gray-200);
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transition: all 0.2s ease-in-out;
  }

  .social-links a:hover {
    color: var(--accent);
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px);
  }

  @media (min-width: 48em) {
    .contact-container {
      padding: 6rem 3rem;
    }

    .content-wrapper {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    h2 {
      font-size: var(--text-4xl);
      max-width: 20ch;
    }

    p {
      font-size: var(--text-lg);
    }

    .cta-section {
      align-items: flex-end;
    }
  }

  @media (min-width: 72em) {
    .contact-container {
      padding: 7rem 4rem;
    }
  }
</style>

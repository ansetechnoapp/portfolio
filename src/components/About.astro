---
import Icon from "./reactJS/Icon";
import Pill from "./reactJS/Pill";

// Define props interface
interface Props {
  title?: string;
  description?: string;
  secondaryDescription?: string;
  imageSrc: { src: string };
  optimizedImageSrc?: {
    avif: string;
    webp: string;
    fallback: string;
    srcsetAvif: string;
    srcsetWebp: string;
  };
  yearsExperience?: number;
  skills?: {
    webDev?: string[];
    mobileDev?: string[];
    other?: string[];
  };
  languages?: {
    name: string;
    level: string;
    percentage: number;
  }[];
  contactInfo?: {
    city?: string;
    street?: string;
    email?: string;
    phone?: string;
    phonePrefix?: string;
    occupation?: string;
    availability?: string;
    website?: string;
  };
}

// Set default values
const {
  title = "About Me",
  description = `As a seasoned Software Engineer with expertise in both web and mobile development, I bring a unique blend of technical proficiency and creative vision to every project. My background in computer systems enables me to architect robust solutions while my design sensibilities ensure exceptional user experiences. I specialize in creating innovative digital products that drive measurable business outcomes and enhance brand visibility. I thrive in collaborative environments and am passionate about leveraging cutting-edge technologies to solve complex challenges.I am always open to feedback and suggestions, so feel free to reach out to me if you have any questions or comments.`,
  imageSrc,
  optimizedImageSrc,
  yearsExperience = 7,
  skills = {
    webDev: [
      "React JS",
      "Next.js",
      "Astro JS",
      "TypeScript",
      "JavaScript",
      "TailwindCSS",
      "SCSS",
      "HTML5/CSS3",
    ],
    mobileDev: ["React Native", "Flutter", "iOS/Android Development"],
    other: [
      "Firebase",
      "Supabase",
      "PostgreSQL",
      "MySQL",
      "MongoDB",
      "Docker",
      "AWS",
      "CI/CD",
      "Jest",
      "Webpack",
      "Agile/Scrum",
      "Git/GitHub",
      "RESTful APIs",
      "GraphQL",
    ],
  },
  languages = [
    { name: "French", level: "Native", percentage: 100 },
    {
      name: "English",
      level: "Professional Working Proficiency",
      percentage: 70,
    },
    // { name: "Spanish", level: "Elementary Proficiency", percentage: 30 },
  ],
  contactInfo = {
    city: "Cotonou",
    street: "",
    email: "contact@anscod.online",
    phone: "",
    phonePrefix: "",
    occupation: "Software Engineer",
    availability: "Available for Freelance & Full-time Opportunities",
    website: "www.anscod.online",
  },
} = Astro.props;
---

<section class="section-about with-background bg-variant p-left-right-2-rem">
  <div class="section-about-img">
    <div class="profile-container">
      <div class="image-frame">
        <div class="profile-image-container">
          {optimizedImageSrc ? (
            <picture>
              <!-- AVIF format -->
              <source
                type="image/avif"
                srcset={`${optimizedImageSrc.avif} 1x, ${optimizedImageSrc.srcsetAvif}`}
                sizes="(max-width: 768px) 100vw, 400px"
              />
              <!-- WebP format -->
              <source
                type="image/webp"
                srcset={`${optimizedImageSrc.webp} 1x, ${optimizedImageSrc.srcsetWebp}`}
                sizes="(max-width: 768px) 100vw, 400px"
              />
              <!-- Fallback format -->
              <img
                src={optimizedImageSrc.fallback}
                alt="Developer portrait"
                class="profile-image"
                loading="lazy"
                decoding="async"
              />
            </picture>
          ) : (
            <img
              src={imageSrc.src}
              alt="Developer portrait"
              class="profile-image"
              loading="lazy"
              decoding="async"
            />
          )}
        </div>

        <div class="experience-badge">
          <div class="badge-icon">
            <i class="fas fa-code"></i>
          </div>
          <div class="badge-text">
            <p class="years">{yearsExperience}+</p>
            <p class="label">Years Experience</p>
          </div>
        </div>
      </div>

      <div class="profile-actions">
        <a href="/assets/cv/resume.pdf" download class="cv-button">
          <Pill
            ><Icon icon="paper-plane-tilt" size="1.33em" /> Download Resume</Pill
          >
        </a>
        <div class="social-links">
          <a
            href="https://github.com/ansetechnoapp"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon"
            aria-label="GitHub Profile"><i class="fab fa-github"></i></a
          >
          <a
            href="https://linkedin.com/in/anscod"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon"
            aria-label="LinkedIn Profile"><i class="fab fa-linkedin-in"></i></a
          >
          <a
            href="https://pinterest.com/anscoddesign"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon"
            aria-label="Pinterest Profile"><i class="fab fa-pinterest"></i></a
          >
          <a
            href="https://instagram.com/anscod.otty"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon"
            aria-label="Instagram Profile"><i class="fab fa-instagram"></i></a
          >
        </div>
      </div>
    </div>
  </div>
  <div class="section2-about">
    <h3 class="title-about">{title}</h3>
    <p class="describe-about">
      {description}
      <br />
    </p>
    <br /><br />
    <div class="grid grid-cols-1 gap-10">
      <!-- Tools & Skills -->
      <div
        class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm card-hover-effect"
        style="--animation-order: 1;"
      >
        <div class="flex items-center mb-8">
          <div
            class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mr-4"
          >
            <i class="fas fa-tools text-purple-500"></i>
          </div>
          <h3 class="text-xl font-semibold dark:text-white">Tools & Skills</h3>
        </div>

        {
          skills.webDev && skills.webDev.length > 0 && (
            <div class="mb-8">
              <h3 class="text-xl font-semibold pb-4 dark:text-white">
                Web Development
              </h3>
              <div class="flex flex-wrap gap-4">
                {skills.webDev.map((skill) => (
                  <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 rounded-full text-sm font-medium transform transition-transform hover:scale-105">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          )
        }

        {
          skills.mobileDev && skills.mobileDev.length > 0 && (
            <div class="mb-8">
              <h3 class="text-xl font-semibold pb-4 dark:text-white">
                Mobile Development
              </h3>
              <div class="flex flex-wrap gap-4">
                {skills.mobileDev.map((skill) => (
                  <span class="px-4 py-2 bg-pink-100 dark:bg-pink-900 text-pink-800 dark:text-pink-100 rounded-full text-sm font-medium transform transition-transform hover:scale-105">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          )
        }

        {
          skills.other && skills.other.length > 0 && (
            <div>
              <h3 class="text-xl font-semibold pb-4 dark:text-white">
                Other Technologies
              </h3>
              <div class="flex flex-wrap gap-4">
                {skills.other.map((skill) => (
                  <span class="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100 rounded-full text-sm font-medium transform transition-transform hover:scale-105">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          )
        }
      </div>

      <!-- Languages -->
      {
        languages && languages.length > 0 && (
          <div
            class="bg-white p-2 rounded-xl shadow-sm card-hover-effect"
            style="--animation-order: 2;"
          >
            <div class="flex items-center mb-6">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                <i class="fas fa-language text-green-500" />
              </div>
              <h3 class="text-xl font-semibold dark:text-white">Languages</h3>
            </div>
            <div class="space-y-4">
              {languages.map((lang) => (
                <div>
                  <div class="flex justify-between mb-1">
                    <span class="text-black dark:text-white">{lang.name}</span>
                    <span class="text-black dark:text-white">{lang.level}</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
                    <div
                      class="bg-green-500 h-2 rounded-full progress-bar-animate"
                      style={`width: 0%; --final-width: ${lang.percentage}%;`}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </div>

    <!-- Contact Information Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 my-8 contact-info-grid">
      {
        contactInfo.city && (
          <div class="flex items-center">
            <i class="fas fa-map-marker-alt text-blue-500 mr-2" />
            <span class="text-black dark:text-white">
              {contactInfo.city} {contactInfo.street}
            </span>
          </div>
        )
      }
      {
        contactInfo.email && (
          <div class="flex items-center">
            <i class="fas fa-envelope text-blue-500 mr-2" />
            <span class="text-black dark:text-white">{contactInfo.email}</span>
          </div>
        )
      }
      {
        contactInfo.phone && (
          <div class="flex items-center">
            <i class="fas fa-phone text-blue-500 mr-2" />
            <span class="text-black dark:text-white">
              ({contactInfo.phonePrefix}) {contactInfo.phone}
            </span>
          </div>
        )
      }
      {
        contactInfo.occupation && (
          <div class="flex items-center">
            <i class="fas fa-graduation-cap text-blue-500 mr-2" />
            <span class="text-black dark:text-white">
              {contactInfo.occupation}
            </span>
          </div>
        )
      }
      {
        contactInfo.availability && (
          <div class="flex items-center">
            <i class="fas fa-briefcase text-blue-500 mr-2" />
            <span class="text-black dark:text-white">
              {contactInfo.availability}
            </span>
          </div>
        )
      }
      {
        contactInfo.website && (
          <div class="flex items-center">
            <i class="fas fa-globe text-blue-500 mr-2" />
            <span class="text-black dark:text-white">
              {contactInfo.website}
            </span>
          </div>
        )
      }
    </div>

    <div class="btn-about gap-10 action-buttons">
      <a href="#contact" class="contact-button">
        <Pill><Icon icon="paper-plane-tilt" size="1.33em" /> Contact Me</Pill>
      </a>
      <a href="/work" class="portfolio-button">
        <Pill><Icon icon="pencil-line" size="1.33em" /> View Portfolio</Pill>
      </a>
    </div>
  </div>
</section>

<style>
  /* Section About Styles */
  .section-about-img {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
  }

  .profile-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    max-width: 400px;
    margin: 0 auto;
  }

  .image-frame {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .profile-image-container {
    /* width: 280px;
    height: 280px; */
    border-radius: 5%;
    padding: 8px;
    background: linear-gradient(
      135deg,
      var(--accent-regular) 0%,
      var(--accent-dark) 100%
    );
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    animation: gradient-shift 8s infinite alternate ease-in-out;
    position: relative;
    overflow: hidden;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
      background-size: 100% 100%;
    }
    100% {
      background-position: 100% 50%;
      background-size: 120% 120%;
    }
  }

  .profile-image {
    width: 100%;
    height: 100%;
    border-radius: 5%;
    object-fit: cover;
    border: 2px solid white;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    filter: saturate(0.95);
  }

  :root.theme-dark .profile-image {
    border: 2px solid var(--gray-800);
    filter: saturate(0.9) brightness(0.95);
  }

  .profile-image:hover {
    transform: scale(1.05);
    filter: saturate(1.1) brightness(1.05);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  }

  :root.theme-dark .profile-image:hover {
    filter: saturate(1.05) brightness(1.1);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
  }

  .profile-image-container::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0) 100%
    );
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .profile-image-container:hover::after {
    opacity: 1;
    animation: shine 1.5s infinite alternate;
  }

  @keyframes shine {
    0% {
      opacity: 0.3;
      transform: translateX(-100%) translateY(-100%) rotate(45deg);
    }
    100% {
      opacity: 0.7;
      transform: translateX(100%) translateY(100%) rotate(45deg);
    }
  }

  .experience-badge {
    position: absolute;
    bottom: 0;
    right: 0;
    background: white;
    border-radius: 12px;
    padding: 12px;
    display: flex;
    align-items: center;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-left: 4px solid var(--accent-regular);
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    animation: badge-float 3s ease-in-out infinite alternate;
  }

  :root.theme-dark .experience-badge {
    background: var(--gray-800);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    border-left: 4px solid var(--accent-dark);
  }

  @keyframes badge-float {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-8px);
    }
  }

  .experience-badge:hover {
    transform: translateY(-12px) scale(1.05);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    border-left: 4px solid var(--accent-dark);
  }

  .badge-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background-color: var(--accent-light);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    color: var(--accent-regular);
    font-size: 1.2rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  :root.theme-dark .badge-icon {
    background-color: var(--gray-700);
    color: var(--accent-dark);
  }

  .badge-icon::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.3) 0%,
      rgba(255, 255, 255, 0) 70%
    );
    opacity: 0;
    transform: scale(0.5);
    transition: all 0.5s ease;
  }

  .experience-badge:hover .badge-icon {
    color: var(--accent-dark);
    transform: rotate(5deg);
  }

  :root.theme-dark .experience-badge:hover .badge-icon {
    color: var(--accent-light);
    background-color: var(--gray-600);
  }

  .experience-badge:hover .badge-icon::before {
    opacity: 1;
    transform: scale(1);
    animation: pulse-light 2s infinite;
  }

  @keyframes pulse-light {
    0% {
      opacity: 0.3;
      transform: scale(0.8);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
    100% {
      opacity: 0.3;
      transform: scale(0.8);
    }
  }

  .badge-text .years {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--gray-0);
    margin: 0;
  }

  .badge-text .label {
    font-size: 0.8rem;
    color: var(--gray-300);
    margin: 0;
  }

  :root.theme-dark .badge-text .years {
    color: var(--gray-999);
  }

  :root.theme-dark .badge-text .label {
    color: var(--gray-400);
  }

  .profile-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    width: 100%;
  }

  .cv-button {
    transition: transform 0.3s ease;
  }

  .cv-button:hover {
    transform: translateY(-3px);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-icon {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background-color: var(--gray-999);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  :root.theme-dark .social-icon {
    background-color: var(--gray-800);
    color: var(--gray-200);
  }

  .social-icon::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--accent-regular);
    border-radius: 50%;
    z-index: -1;
    transform: scale(0);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .social-icon:hover {
    color: white;
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }

  :root.theme-dark .social-icon:hover {
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  }

  .social-icon:hover::before {
    transform: scale(1);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-links a:nth-child(1) .social-icon:hover {
    box-shadow: 0 10px 20px rgba(36, 41, 46, 0.2);
  }

  .social-links a:nth-child(2) .social-icon:hover {
    box-shadow: 0 10px 20px rgba(0, 119, 181, 0.2);
  }

  .social-links a:nth-child(3) .social-icon:hover {
    box-shadow: 0 10px 20px rgba(29, 161, 242, 0.2);
  }

  .social-links a:nth-child(4) .social-icon:hover {
    box-shadow: 0 10px 20px rgba(234, 76, 137, 0.2);
  }

  .section-about {
    display: grid;
    gap: 2rem;
  }

  .section2-about .title-about {
    text-align: center;
    position: relative;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
    color: var(--gray-0);
  }

  :root.theme-dark .section2-about .title-about {
    color: white;
  }

  .section2-about .title-about:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--accent-light),
      var(--accent-regular)
    );
    border-radius: 2px;
  }

  :root.theme-dark .section2-about .title-about:after {
    background: linear-gradient(
      90deg,
      var(--accent-dark),
      var(--accent-regular)
    );
  }

  .section2-about .describe-about {
    margin: 2rem 0;
    color: var(--gray-300);
    line-height: 1.8;
    font-size: 1.05rem;
    text-align: justify;
    max-width: 95%;
  }

  :root.theme-dark .section2-about .describe-about {
    color: var(--gray-400);
  }

  .section2-about .btn-about {
    display: flex;
    margin-top: 2.5rem;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .contact-button,
  .portfolio-button {
    transition: all 0.3s ease;
  }

  .contact-button:hover,
  .portfolio-button:hover {
    transform: translateY(-5px);
    filter: brightness(1.1);
  }

  .card-hover-effect {
    transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 1px solid rgba(0, 0, 0, 0.05);
    padding: 1.5rem !important;
    border-radius: 16px !important;
    background: rgba(255, 255, 255, 0.95) !important;
    position: relative;
    z-index: 1;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s forwards;
    animation-delay: calc(var(--animation-order, 0) * 0.2s);
  }

  :root.theme-dark .card-hover-effect {
    background: rgba(30, 30, 40, 0.95) !important;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-hover-effect::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 16px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    z-index: -1;
  }

  .card-hover-effect:hover {
    transform: translateY(-8px);
    border-color: var(--accent-light);
    background: rgba(255, 255, 255, 1) !important;
  }

  :root.theme-dark .card-hover-effect:hover {
    background: rgba(40, 40, 55, 1) !important;
    border-color: var(--accent-dark);
  }

  .card-hover-effect:hover::after {
    opacity: 1;
  }

  .card-hover-effect h3 {
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--gray-0);
    position: relative;
    display: inline-block;
  }

  :root.theme-dark .card-hover-effect h3 {
    color: white;
  }

  .card-hover-effect h3::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-regular);
    transition: width 0.4s ease;
  }

  .card-hover-effect:hover h3::after {
    width: 100%;
  }

  /* Add staggered animation to skill tags */
  .card-hover-effect span {
    transition: all 0.3s ease;
    transform: translateY(0);
  }

  .card-hover-effect:hover span {
    transform: translateY(-3px);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 48em) {
    .section-about {
      display: grid;
      grid-template-columns: 1fr 1fr;

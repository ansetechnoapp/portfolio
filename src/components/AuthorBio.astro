---
interface Props {
  author: {
    name: string;
    bio: string;
    avatar: string;
    social: {
      linkedin?: string;
      github?: string;
      instagram?: string;
      pinterest?: string;
    };
  };
}

const { author } = Astro.props;
---

<div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8 mb-16 border border-indigo-100 dark:border-gray-700">
  <div class="flex flex-col lg:flex-row lg:items-center gap-6">
    <!-- Author Avatar -->
    <div class="flex-shrink-0">
      <div class="h-24 w-24 lg:h-32 lg:w-32 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white text-2xl lg:text-3xl font-bold shadow-lg">
        {author.name.charAt(0).toUpperCase()}
      </div>
    </div>
    
    <!-- Author Info -->
    <div class="flex-1">
      <div class="mb-4">
        <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 dark:text-white mb-2">
          <a href="/about" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">
            {author.name}
          </a>
        </h3>
        <p class="text-lg text-indigo-600 dark:text-indigo-400 font-medium">
          DÃ©veloppeur Web & Mobile
        </p>
      </div>
      
      <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-6 text-lg">
        {author.bio}
      </p>
      
      <!-- Social Links -->
      <div class="flex items-center space-x-4">
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Suivez-moi :</span>
        
        {author.social.github && (
          <a
            href={`https://${author.social.github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            title="GitHub"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </a>
        )}
        
        {author.social.linkedin && (
          <a
            href={`https://${author.social.linkedin}`}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            title="LinkedIn"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        )}
        
        {author.social.instagram && (
          <a
            href={`https://${author.social.instagram}`}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link text-gray-600 hover:text-pink-600 dark:text-gray-400 dark:hover:text-pink-400"
            title="Instagram"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.718-1.297c-.875.807-2.026 1.297-3.323 1.297s-2.448-.49-3.323-1.297c-.807-.875-1.297-2.026-1.297-3.323s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323z"/>
            </svg>
          </a>
        )}
        
        {author.social.pinterest && (
          <a
            href={`https://${author.social.pinterest}`}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link text-gray-600 hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400"
            title="Pinterest"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.097.118.112.221.083.342-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.746-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"/>
            </svg>
          </a>
        )}
        
        <!-- Contact CTA -->
        <a
          href="/contact"
          class="ml-4 inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition"
        >
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Me contacter
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .social-link {
    @apply p-2 rounded-lg hover:bg-white dark:hover:bg-gray-800 transition-all duration-200;
  }
  
  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>

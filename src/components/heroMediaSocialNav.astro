---
import Icon from "./reactJS/Icon";
import type { iconPaths } from "./IconPaths";

/** Icon links to social media */
const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  { label: "Twitter", href: "https://x.com/ottianselme", icon: "twitter-logo" },
  {
    label: "GitHub",
    href: "https://github.com/ansetechnoapp/",
    icon: "github-logo",
  },
  {
    label: "YouTube",
    href: "https://www.youtube.com/@anscod/",
    icon: "youtube-logo",
  },
];
---

<div class="hero-media-social-nav">
  {
    iconLinks.map(({ href, icon, label }, index) => (
      <a
        href={href}
        class="social-link"
        target="_blank"
        style={`--delay: ${index * 100}ms`}
      >
        <span class="sr-only">{label}</span>
        <Icon icon={icon} />
      </a>
    ))
  }
</div>

<style>
  .hero-media-social-nav {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 2rem;
    position: relative;
    z-index: 10;
  }

  .social-link {
    padding: 0.75rem;
    border-radius: 50%;
    background: var(--gray-800);
    color: var(--gray-300);
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      transform 0.3s ease,
      background-color 0.3s ease;
    position: relative;
    overflow: hidden;
    animation: socialFadeIn 0.5s ease-out forwards;
    opacity: 0;
    animation-delay: var(--delay);
  }

  @keyframes socialFadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .social-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--accent-regular);
    border-radius: 50%;
    transform: scale(0);
    transition: transform 0.3s ease;
    z-index: -1;
  }

  .social-link:hover {
    color: white;
    transform: translateY(-5px);
  }

  .social-link:hover::before {
    transform: scale(1);
  }

  @media (min-width: 48em) {
    .hero-media-social-nav {
      gap: 2rem;
    }

    .social-link {
      padding: 1rem;
    }
  }

  @media (min-width: 62em) {
    .hero-media-social-nav {
      justify-content: flex-start;
    }
  }
</style>

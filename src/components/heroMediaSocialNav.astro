---
import Icon from "./reactJS/Icon";
import type { iconPaths } from "./IconPaths";

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  { label: "Twitter", href: "https://x.com/ottianselme", icon: "twitter-logo" },
  // { label: 'Twitch', href: 'https://twitch.tv/me', icon: 'twitch-logo' },
  {
    label: "GitHub",
    href: "https://github.com/ansetechnoapp/",
    icon: "github-logo",
  },
  // { label: 'CodePen', href: 'https://codepen.io/me', icon: 'codepen-logo' },
  // { label: 'dribbble', href: 'https://dribbble.com/me', icon: 'dribbble-logo' },
  {
    label: "YouTube",
    href: "https://www.youtube.com/@anscod/",
    icon: "youtube-logo",
  },
];
---

<div class="hero-media-social-nav">
  {
    iconLinks.map(({ href, icon, label }) => (
      <a href={href} class="social">
        <span class="sr-only">{label}</span>
        <Icon icon={icon} />
      </a>
    ))
  }
</div>
<style>
  /* .hero-media-social-nav */

  /* Hide on mobile screens by default */
  .hero-media-social-nav {
    display: none;
  }

  /* Only show on desktop screens (min-width: 75em) */
  @media (min-width: 75em) {
    .hero-media-social-nav {
      display: flex;
      background-color: var(--gray-1003);
      border-radius: 16px;
      width: max-content;
      padding: 1rem 0rem 1rem 0rem;
      gap: 1rem;
      line-height: 1.2;
      flex-direction: column;
      justify-content: center;
    }

    .hero-media-social-nav a {
      padding: 0.5rem 1rem;
      border-radius: 999rem;
      display: flex;
      font-size: var(--text-sm);
      color: var(--gray-300);
      transition:
        color var(--theme-transition),
        background-color var(--theme-transition);
    }

    .hero-media-social-nav a:hover {
      background: var(--accent-subtle-overlay);
    }

    .hero-media-social-nav a.active {
      background-color: var(--accent-regular);
      color: var(--accent-text-over);
    }
  }
</style>

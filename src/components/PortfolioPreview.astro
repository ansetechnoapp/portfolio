---
import Pill from "./Pill.astro";
import Icon from "./Icon.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<article class="portfolio_item">
  <div class="work-btn">
		{data.tech.map((t) =>  <span><Pill><Icon icon="paper-plane-tilt" size="1.33em" />{t}</Pill></span>)}
	</div>
	<div class="portfolio_item-image">
		<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async">
		<div class="layer">
			<p>{data.description}</p>
			<a href={`/work/${slug}`}><i class="bx bx-link-external"></i></a>
		</div>
	</div>
	<h5>{data.title}</h5>
	<div class="work-btn">
		<a href="" class="btn"><Pill><Icon icon="paper-plane-tilt" size="1.33em" /> github</Pill></a>
	<a href={`/work/${slug}`} class="btn"><Pill><Icon icon="paper-plane-tilt" size="1.33em" /> Info</Pill></a>
	<a href="" class="btn"><Pill><Icon icon="paper-plane-tilt" size="1.33em" /> Voir</Pill></a>
	</div>
</article>

<style>
  .Work-grid img {
    width: 100%;
  }
  .portfolio_item .work-btn {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    column-gap: 0.2rem;
    row-gap: 0.9rem;
  }

  .layer {
    width: 100%;
    height: 0;
    background: linear-gradient(rgba(0, 0, 0, 0.1), #ff004f);
    position: absolute;
    border-radius: 8px;
    left: 0;
    bottom: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 40px;
    transition: height 0.5s;
  }
  .portfolio_item {
    background: var(--gradient-stroke);
    padding: 1rem 0rem;
    border-radius: 0.5rem;
    border-color: transparent;
    transition: var(--theme-transition);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }
  .portfolio_item:hover {
    background: transparent;
    border: 3px solid aliceblue;
  }
  .portfolio_item:hover .layer {
    height: 100%;
  }
  .portfolio_item-image {
    border-radius: 1rem;
    overflow: hidden;
    position: relative;
    margin: 0rem 1rem;
  }
  .portfolio_item h3 {
    padding: 1.2rem 0.2rem;
  }
  .portfolio_item-cta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  @media (min-width: 48em) {
    .portfolio_item .work-btn {
      column-gap: 0.5rem;
    }
  }
</style>

---
import Icon from './Icon.astro';
import type { iconPaths } from './IconPaths';


/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	// { label: 'Home', href: '/', icon: 'twitter-logo' },
	{ label: 'work', href: '/work/', icon: 'twitch-logo' },
	{ label: 'About', href: '/about/', icon: 'github-logo' },
];
---

<div class="menu-link-nav">
	<a class="active" href="http://"><Icon icon={"twitter-logo"} /></a>
	{
		iconLinks.map(({ href, icon, label }) => (
			<a href={href} class="social">
				<span class="sr-only">{label}</span>
				<Icon icon={icon} />
			</a>
		))
	}
          </div>

<style>
	/* .menu-link-nav{
    display: none;
   } */
   
   .menu-link-nav{
    background: radial-gradient(var(--gray-900),var(--gray-800) 150%);
    box-shadow: var(--shadow-md);
    width: max-content;
    display: block;
    padding: 0.5rem 0.5625rem;
    z-index: 2;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 1rem;
    display: flex;
    gap: 0.8rem;
    border-radius: 999rem;
    backdrop-filter: blur(15px);
    line-height: 1.2;
   }

   .menu-link-nav a{
    padding: 0.5rem 1rem;
    border-radius: 999rem;
    display: flex;
    font-size:var(--text-sm);
    color: var(--gray-300);
    transition: color var(--theme-transition),background-color var(--theme-transition);
   }
   .menu-link-nav a:hover{
    background: var(--accent-subtle-overlay);
   }
   .menu-link-nav a.active{
    background-color: var(--accent-regular);
    color: var(--accent-text-over);
   }

  /* .menu-link-nav */
  
   @media (min-width: 50em) {
    .menu-link-nav{
    background: #ead5f285;
    padding: 1.7rem 0rem 1.7rem 0rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 1rem;
    flex-direction:column;
    margin-left: 0.5rem;
    left:0;
    bottom: 0;
    height: fit-content;
   }

   .menu-link-nav a{
    padding: 0.5rem 1rem;
    border-radius: 999rem;
    display: flex;
    font-size:var(--text-sm);
    color: var(--gray-300);
    transition: color var(--theme-transition),background-color var(--theme-transition);
   }
   .menu-link-nav a:hover{
    background: var(--accent-subtle-overlay);
   }
   .menu-link-nav a.active{
    background-color: var(--accent-regular);
    color: var(--accent-text-over);
   }
  }
</style>
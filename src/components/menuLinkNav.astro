---
// import Icon from './Icon.astro';
import type { iconPaths } from "./IconPaths";
import ThemeToggle from "./ThemeToggle.astro";
import MenuLinks from "./reactJS/MenuLinks";

interface Props {
  namepage?: string | undefined;
}

const { namepage } = Astro.props;
---

<div class="menu-link-nav">
  <MenuLinks client:load namepage={namepage} pathname={Astro.url.pathname} />
  <ThemeToggle
    togglelightdarktheme="toggleside"
    toggleiconelightdarktheme="lighty"
  />
</div>

<style>
  .menu-link-nav {
    background: radial-gradient(#f3f4f7, #090b11 150%);
    box-shadow: var(--shadow-md);
    width: max-content;
    display: block;
    padding: 0.5rem 0.5625rem;
    z-index: 2;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 0.1rem;
    display: flex;
    border-radius: 999rem;
    backdrop-filter: blur(15px);
    line-height: 1.2;
  }

  .menu-link-nav a {
    padding: 0.5rem 1rem;
    border-radius: 999rem;
    display: flex;
    font-size: var(--text-sm);
    color: var(--gray-300);
    transition:
      color var(--theme-transition),
      background-color var(--theme-transition);
  }
  .menu-link-nav a:hover {
    background: var(--accent-subtle-overlay);
  }
  .menu-link-nav a.active {
    background-color: var(--accent-regular);
    color: var(--accent-text-over);
  }

  /* Styles pour MenuLinks React component */
  .menu-link-nav .menu-links-container {
    display: flex;
    flex-direction: row; /* Horizontal sur mobile */
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu-link-nav .menu-link-item {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem;
    display: inline-flex;
    border-radius: 0.75rem;
    backdrop-filter: blur(15px);
    color: var(--gray-300);
    transition:
      color var(--theme-transition),
      background-color var(--theme-transition);
    text-decoration: none;
  }

  .menu-link-nav .menu-link-item:hover {
    background: var(--accent-subtle-overlay);
  }

  .menu-link-nav .menu-link-item.active {
    background-color: var(--accent-regular);
    color: var(--accent-text-over);
  }
  @media (min-width: 48em) {
    .menu-link-nav {
      background: #ead5f285;
      padding: 1.7rem 0rem 1.7rem 0rem;
      top: 50%;
      transform: translateY(-50%);
      display: flex;
      gap: 1rem;
      flex-direction: column;
      margin-left: 0.5rem;
      left: 0;
      bottom: 0;
      height: fit-content;
    }

    .menu-link-nav a {
      padding: 0.5rem 1rem;
      border-radius: 999rem;
      display: flex;
      font-size: var(--text-sm);
      color: var(--gray-300);
      transition:
        color var(--theme-transition),
        background-color var(--theme-transition);
    }
    .menu-link-nav a:hover {
      background: var(--accent-subtle-overlay);
    }
    .menu-link-nav a.active {
      background-color: var(--accent-regular);
      color: var(--accent-text-over);
    }
    .menu-link-nav theme-toggle {
      /* code dans ./styles/style.css */
    }

    /* Styles pour MenuLinks React component sur desktop */
    .menu-link-nav .menu-links-container {
      flex-direction: column; /* Vertical sur desktop */
      gap: 1rem;
    }

    .menu-link-nav .menu-link-item {
      padding: 0.5rem 1rem;
    }
  }
</style>
